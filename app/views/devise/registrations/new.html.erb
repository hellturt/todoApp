<div class="col-sm-6 col-md-4 col-md-offset-4">
	<h3 class="text-center">Sign up</h3>

		<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		  <%= f.error_notification %>

		    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email" %>
		    <%= f.input :password, required: true, label: false, placeholder: "Password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
		    <%= f.input :password_confirmation, label: false, placeholder: "Reconfirm password", required: true %>
		    <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block" %>

		<% end %>



		<%= render "devise/shared/links" %>
</div>
