%div.col-sm-6.col-md-4.col-md-offset-4
	= simple_form_for @task do |f|
		= f.input :title, autofocus: true, label: false, placeholder: "Your task title"
		= f.input :content, input_html: {rows: 5}, autofocus: true, label: false, placeholder: "Add your task"
		= f.button :submit, class: "btn btn-primary btn-block"